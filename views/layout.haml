!!! Strict
%html
  %head
    %title Thrifty
    %script{ :src => '/javascripts/jquery-1.3.2.min.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/app.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/layout.js', :type => 'text/javascript' }
    %link{ :rel => "stylesheet", :href => "/main.css", :type => "text/css", :media => "screen" }
    / %link{ :rel => "stylesheet", :href => "/stylesheets/main.css", :type => "text/css", :media => "screen" }
  %body
    #container
      #user-panel
        - if logged_in?
          %a#user-link= current_user.name
      #flash
        - if flash[:ok]
          .ok
            #icon &nbsp
            #message= flash[:ok]
        - if flash[:error]
          .error
            #icon &nbsp
            #message= flash[:error]
      #main_panel
        = yield

